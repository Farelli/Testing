#!/bin/bash
#
# setup - Downloads and installs the setup scripts
#
# Created by: Scurby <scurby@swgemu.com>
#
# Date: Tuesday, April 28 2015
cd
sudo apt-get install -y git
git clone https://github.com/Scurby/Testing.git
mkdir bin
cp -i /home/swgemu/Testing/bin/* /home/swgemu/bin/
mkdir setup
cp -i /home/swgemu/Testing/setup/* /home/swgemu/setup/
mkdir run
cd
cp -i /home/swgemu/Testing/run/* /home/swgemu/run/
chmod -v +x /home/swgemu/bin/*
sudo /sbin/reboot
